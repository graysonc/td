# A very, very lightweight todo list.
# Grayson Chao

TODO_FILE="$HOME/todo.txt"

if [[ $1 = 'add' ]] then

  line="$(touch todo.txt && wc -l todo.txt): "
  
  # Chomp through the line, word by word. We don't care about $1 anymore.
  while [[ -n $2 ]] ; do
    line="$line $2"
  done

  line="$line \n"

  cat $TODO_FILE >> $line

elif [[ $1 = list ]] ; then

  echo $($TODO_FILE);

elif [[ $1 = remove ]] ; then
  
  sed -i "$(wc -l $TODO_FILE)d" $TODO_FILE

fi

